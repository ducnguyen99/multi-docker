{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [{
            "name": "client",
            "image": "ducbin021/multi-client",
            "hostname": "client",
            "portMappings": [{
                "hostPort": 3000,
                "containerPort": 3000
            }],
            "essential": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "ducbin021/multi-server",
            "hostname": "api",
            "essential": false,
            "memory": 128
        },
        {
            "name": "worker",
            "image": "ducbin021/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory": 128
        },
        {
            "name": "nginx",
            "image": "ducbin021/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [{
                "hostPort": 80,
                "containerPort": 80
            }],
            "link": ["client", "server"],
            "memory": 128
        }
    ]
}